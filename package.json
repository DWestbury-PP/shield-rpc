{
  "name": "shield-rpc",
  "version": "0.1.0",
  "description": "MEV-protected transaction router + metrics",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "cli": "tsx src/cli.ts",
    "demo:load": "bash -c 'for i in {1..300}; do npm run -s cli -- send --shield ${SHIELD_URL:-http://localhost:8080} --public ${PUBLIC_RPC:-https://rpc.flashbots.net} --simulate; sleep ${DELAY:-1}; done'"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "fastify": "^5.5.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
